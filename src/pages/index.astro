          <li id="works">
            <Entry
              key="works-home-link"
              title="Projects"
              path="/works/"
              excerpt="Showcase of AI projects, research work, and technical implementations."
            />
          </li>
          <li id="contact">
            <Entry
              key="contact-home-link"
              title="Contact"
              path="/contact/"
              excerpt="Ideal ways of sending questions, messages, and love letters to me."
            />
          </li>
          <li id="topics">
            <Entry
              key="topics-home-link"
              title="All topics"
              path="/tag/"
              excerpt="Archive of all posts organized by topic."
            />
          </li>
        </ul>
      </div>
      
      <!-- Contact Section -->
      <h2 class={style.subHeading}>
        <span>Get in Touch</span>
      </h2>
      <div style={{ textAlign: "center", marginBottom: "2em" }}>
        <div style={{ display: "flex", justifyContent: "center", gap: "2em", flexWrap: "wrap", marginBottom: "1em" }}>
          <a href="https://www.linkedin.com/in/kishore-kumar-11184a196/" target="_blank" rel="noopener noreferrer" style={{ display: "flex", alignItems: "center", gap: "0.5em", textDecoration: "none", color: "var(--text-color)" }}>
