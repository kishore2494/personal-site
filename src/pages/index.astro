          <a href="https://medium.com/@kishore2494" target="_blank" rel="noopener noreferrer" style={{ display: "flex", alignItems: "center", gap: "0.5em", textDecoration: "none", color: "var(--text-color)" }}>
            <span style={{ fontSize: "1.5em" }}>üìù</span>
            <span>Medium</span>
          </a>
          <a href="mailto:akishorekumar2494@gmail.com" style={{ display: "flex", alignItems: "center", gap: "0.5em", textDecoration: "none", color: "var(--text-color)" }}>
            <span style={{ fontSize: "1.5em" }}>üìß</span>
            <span>Email</span>
